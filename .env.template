# Service Role: "leader" or "follower"
ROLE=leader

# Port to listen on
PORT=8000

# --- Leader-Only Configuration ---

# Comma-separated list of follower host:port pairs
FOLLOWERS=follower1:8001,follower2:8002,follower3:8003,follower4:8004,follower5:8005

# Number of follower acknowledgements required for a write to succeed
WRITE_QUORUM=3

# Minimum and maximum simulated network delay in seconds
MIN_DELAY=0.0001
MAX_DELAY=0.001

# --- Common Configuration ---

# Optional shared secret for replication requests
# REPL_SECRET=your-super-secret-key

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
